<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Link to Tailwind CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Link to Google Fonts for custom typography -->
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Bebas+Neue&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Body styling with background color and gradient */
        body {
            background-color: #EDE6D4; /* Base color */
            background-image: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 25%, transparent 25%, transparent 75%, rgba(255, 255, 255, 0.1) 75%, rgba(255, 255, 255, 0.1)), 
                              linear-gradient(225deg, rgba(255, 255, 255, 0.1) 25%, transparent 25%, transparent 75%, rgba(255, 255, 255, 0.1) 75%, rgba(255, 255, 255, 0.1));
            background-size: 20px 20px; /* Size of the lines */
        }
        /* Truncate content with a fade effect */
        .content-truncate {
            position: relative;
            max-height: 60px; /* Adjust this value to control how much content is shown */
            overflow: hidden;
        }
        .content-truncate::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 20px; /* Height of the fade effect */
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
        }
        /* Styling for location text */
        .location {
            color: #007bff; /* Blue color for location */
        }
        /* Styling for post titles */
        .post-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2rem; 
            padding: 4px; /* Padding around the title */
            border-radius: 4px; /* Rounded corners for the title background */
        }
        /* Modal title styling */
        .modal-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2rem; 
            background-color: #e7f1ff; /* Light blue background for modal title */
            padding: 10px; /* Padding around the title */
            border-radius: 4px; /* Rounded corners for the title background */
        }
        /* Modal location styling */
        .modal-location {
            color: #007bff;
        }
        /* Modal content styling */
        .modal-content {
            font-family: 'PT Serif', serif;
            font-size: 1.2rem; 
            padding: 10px; /* Padding around the content */
            border-radius: 4px; /* Rounded corners for the content background */
        }
        /* Styling for the "Your Blogs" section title */
        .your-blogs {
            font-family: 'Great Vibes', cursive; /* Use Great Vibes font */
            font-size: 2.5rem; /* Adjust font size as needed */
            padding: 5px;
        }
        /* User profile title styling */
        .user-profile {
            font-family: 'Lobster', cursive; /* Use Lobster font */
            font-size: 3rem; /* Adjust font size as needed */
            text-align: center;
        }
        /* User profile subtitle styling */
        .user-profile-s {
            font-family: Georgia, 'Times New Roman', Times, serif, cursive; /* Use Lobster font */
            font-size: 1rem; /* Adjust font size as needed */
            text-align: center;
            padding: 5px;
        }
    </style>
    <script>
        // Function to automatically resize the textarea based on content
        function autoResizeTextarea(element) {
            element.style.height = 'auto'; // Reset height
            element.style.height = element.scrollHeight + 'px'; // Set height to scrollHeight
        }

        // Function to open the modal and display post details
        function openModal(title, location, content) {
            const modal = document.getElementById('modal');
            modal.querySelector('.modal-title').innerText = title; // Set modal title
            modal.querySelector('.modal-location').innerText = `Location: ${location}`; // Set modal location
            modal.querySelector('.modal-content').innerText = content; // Set modal content
            modal.classList.remove('hidden'); // Show the modal
        }

        // Function to close the modal
        function closeModal() {
            const modal = document.getElementById('modal');
            modal.classList.add('hidden'); // Hide the modal
        }
    </script>
</head>
<body>
    <div class="max-w-4xl mx-auto px-4 py-8">
        <header class="bg-white shadow-md rounded-lg p-6 mb-6">
            <h1 class="user-profile text-3xl font-bold text-gray-800">User  Profile</h1> <!-- Main title -->
            <h2 class="user-profile-s text-xl font-semibold text-gray-600 mt-2">Welcome, <%= user.email %>!</h2> <!-- Welcome message -->
        </header>

        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <form action="/post" method="post" class="mb-4"> <!-- Form for creating a new post -->
                <input type="text" name="title" placeholder="Enter a title" required 
                       class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" />

                <textarea name="content" placeholder="Write your blog here..." required 
                          class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200 resize-none mt-4" 
                          rows="3" oninput="autoResizeTextarea(this)"></textarea>
                
                <input type="text" name="location" placeholder="Enter a location" required 
                       class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200 mt-4" />

                <button type="submit" class="mt-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-200">Post</button> <!-- Submit button -->
            </form>
            <div class="flex justify-between">
                <a href="/readblog" class="text-blue-600 hover:underline">Read Blogs</a> <!-- Link to read blogs -->
                <a class="logout-button text-red-600 hover:underline" href="/logout">Logout</a> <!-- Logout link -->
            </div>
        </div>

        <h2 class="your-blogs text-2xl font-semibold text-gray-800 mb-4">Your Blogs</h2> <!-- Section title for user blogs -->
        <div class="space-y-4">
            <% if (user.posts.length === 0) { %> <!-- Check if there are no posts -->
                <p class="text-gray-600">No posts available.</p> <!-- Message for no posts -->
            <% } else { %>
                <% user.posts.reverse().forEach((post) => { %> <!-- Loop through user posts -->
                    <div class="bg-white shadow-md rounded-lg p-4">
                        <h3 class="text-xl font-bold text-gray-800 mb-2 post-title"><%= post.title %></h3> <!-- Post title -->
                        <p class="location mb-2">Location: <%= post.location %></p> <!-- Post location -->
                        <div class="content-truncate">
                            <p class="text-gray-800 mb-2"><%= post.content %></p> <!-- Post content -->
                        </div>
                        <small class="text-gray-500"><%= post.likes.length %> likes</small> <!-- Likes count -->
                        <div class="mt-2">
                            <a href="#" onclick="openModal('<%= post.title %>', '<%= post.location %>', '<%= post.content %>')" class="text-blue-600 hover:underline">View Details</a> <!-- Link to view post details -->
                            <span class="mx-2">|</span>
                            <a href="/like/<%= post._id %>" class="text-blue-600 hover:underline">
                                <%= post.likes.indexOf(user._id) === -1 ? "like" : "unlike" %> <!-- Like/unlike link based on user interaction -->
                            </a>
                            <span class="mx-2">|</span>
                            <a href="/edit/<%= post._id %>" class="text-blue-600 hover:underline">Edit</a> <!-- Link to edit the post -->
                            <span class="mx-2">|</span>
                            <a href="/delete/<%= post._id %>" class="text-red-600 hover:underline" onclick="return confirm('Are you sure you want to delete this post?');">Delete</a> <!-- Link to delete the post with confirmation -->
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <!-- Modal for displaying post details -->
    <div id="modal" class="fixed inset-0 flex items-center justify-center hidden bg-black bg-opacity-50">
        <div class="bg-white rounded-lg p-6 max-w-md w-full">
            <h3 class="text-xl font-bold modal-title mb-2"></h3> <!-- Modal title -->
            <p class="modal-location mb-2"></p> <!-- Modal location -->
            <p class="modal-content mb-4"></p> <!-- Modal content -->
            <button onclick="closeModal()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Close</button> <!-- Button to close the modal -->
        </div>
    </div>
</body>
</html>